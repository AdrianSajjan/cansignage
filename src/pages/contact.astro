---
import Layout from "../layouts/Layout.astro";
import Malaysia from "../assets/images/contact/malaysia.avif";
import Singapore from "../assets/images/contact/singapore.avif";
---

<Layout>
  <main>
    <section id="hero" class="pt-40">
      <div class="max-w-screen-2xl mx-auto px-4 md:px-12">
        <h1 class="text-5xl md:text-8xl font-heading font-light mb-8">
          Get in Touch
        </h1>
        <p
          class="text-base md:text-lg max-w-xl mb-24 font-normal font-heading uppercase text-black/80"
        >
          REACH OUT, SHARE A QUESTION OR PROVIDE FEEDBACK ON OUR PRODUCTS. FILL
          OUT THE FORM AND WE'LL RESPOND AS SOON AS POSSIBLE.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="flex flex-col">
            <h2 class="text-2xl md:text-3xl font-bold mt-auto">
              International Distributors
            </h2>
          </div>
          <blockquote
            class="text-sm md:text-base italic max-w-lg leading-loose"
          >
            "We are thrilled to welcome you as a distributor! Your commitment
            and dedication to our products are invaluable, and we're excited to
            achieve even greater success together"
          </blockquote>
        </div>
      </div>
    </section>
    <section id="distributors">
      <div class="max-w-screen-2xl mx-auto px-4 md:px-12 pt-10">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
          <div class="flex flex-col items-start">
            <img
              src={Malaysia.src}
              alt="Malaysia Certificate"
              class="object-contain w-full h-auto"
            />
            <div class="text-xl md:text-2xl font-bold text-left mt-6">
              Sorab Enterprise Sdn Bhd, Malaysia
            </div>
          </div>
          <div class="flex flex-col items-start">
            <img
              src={Singapore.src}
              alt="Singapore Certificate"
              class="object-contain w-full h-auto"
            />
            <div class="text-xl md:text-2xl font-bold text-left mt-6">
              Sorab Enterprise Pte Ltd, Singapore
            </div>
          </div>
        </div>
      </div>
    </section>
    <section id="contact" class="pb-10 pt-40 max-w-screen-2xl mx-auto px-4 md:px-12">
      <form class="max-w-5xl ml-auto flex flex-col gap-8" autocomplete="off">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex flex-col">
            <label for="firstName" class="mb-1 font-medium">First name <span class="text-red-500">*</span></label>
            <input id="firstName" name="firstName" type="text" required class="border border-gray-600 rounded px-3 py-2" />
          </div>
          <div class="flex flex-col">
            <label for="lastName" class="mb-1 font-medium">Last name <span class="text-red-500">*</span></label>
            <input id="lastName" name="lastName" type="text" required class="border border-gray-600 rounded px-3 py-2" />
          </div>
        </div>
        <div class="flex flex-col">
          <label for="email" class="mb-1 font-medium">Email <span class="text-red-500">*</span></label>
          <input id="email" name="email" type="email" required class="border border-gray-600 rounded px-3 py-2" />
        </div>
        <div class="flex flex-col">
          <label for="company" class="mb-1 font-medium">Company Name</label>
          <input id="company" name="company" type="text" class="border border-gray-600 rounded px-3 py-2" />
        </div>
        <div class="flex flex-col">
          <label for="designation" class="mb-1 font-medium">Designation</label>
          <input id="designation" name="designation" type="text" class="border border-gray-600 rounded px-3 py-2" />
        </div>
        <div class="flex flex-col">
          <label for="phone" class="mb-1 font-medium">Phone <span class="text-red-500">*</span></label>
          <div class="flex items-center gap-2">
            <select id="country" name="country" class="border border-gray-600 rounded px-2 py-2">
              <option value="">üåê</option>
              <option value="MY">üá≤üáæ +60</option>
              <option value="SG">üá∏üá¨ +65</option>
            </select>
            <input id="phone" name="phone" type="tel" required class="border border-gray-600 rounded px-3 py-2 flex-1" />
          </div>
        </div>
        <div class="flex flex-col">
          <label for="inquiryType" class="mb-1 font-medium">Type of inquiry</label>
          <input id="inquiryType" name="inquiryType" type="text" class="border border-gray-600 rounded px-3 py-2" />
        </div>
        <div class="flex flex-col">
          <label class="mb-1 font-medium">Select CAN Model <span class="text-red-500">*</span></label>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex flex-col gap-2">
              <label class="inline-flex items-center"><input type="checkbox" name="canModel" value="CANLit" class="mr-2" />CANLit</label>
              <label class="inline-flex items-center"><input type="checkbox" name="canModel" value="CANWalk" class="mr-2" />CANWalk</label>
              <label class="inline-flex items-center"><input type="checkbox" name="canModel" value="CANMount" class="mr-2" />CANMount</label>
            </div>
            <div class="flex flex-col gap-2">
              <label class="inline-flex items-center"><input type="checkbox" name="canModel" value="CAN 3201" class="mr-2" />CAN 3201</label>
              <label class="inline-flex items-center"><input type="checkbox" name="canModel" value="CANVue" class="mr-2" />CANVue</label>
              <label class="inline-flex items-center"><input type="checkbox" name="canModel" value="CANNX" class="mr-2" />CANNX</label>
            </div>
          </div>
        </div>
        <div class="flex flex-col">
          <label for="message" class="mb-1 font-medium">Message</label>
          <textarea id="message" name="message" rows="4" class="border border-gray-600 rounded px-3 py-2" placeholder="Write your message here"></textarea>
        </div>
        <div class="flex justify-start">
          <button type="submit" class="bg-black text-white px-10 py-3 rounded-full font-semibold tracking-wider hover:bg-gray-900 transition">SEND MESSAGE</button>
        </div>
      </form>
    </section>
  </main>
</Layout>
